            android:backgroundTint="#1AFFC727">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_iconic"
                app:layout_constraintEnd_toEndOf="parent"
